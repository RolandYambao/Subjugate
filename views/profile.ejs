<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile</title>
    <link rel="stylesheet" href="https://unpkg.com/bulma@0.9.0/css/bulma.min.css" />
    <script src="https://kit.fontawesome.com/7dc3015a44.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/cards.css">

    <style>
        .navbar {
            background-color: #301934;
        }

        body {
            background-color: black;
        }

        strong {
            color: black
        }

        #firstFooter {
            background: #301934;
        }

        #Subjugate {
            color: white;
        }

        .navbar-burger {
            color: white;
        }

        #navbarMenu {
            background: #301934;
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="container">
            <div class="navbar-brand">
                <a class="navbar-item" href="/">
                    <p><strong>Subjugate</strong></p>
                </a>

                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="true" data-target="navbarMenu">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>
            <div id="navbarMenu" class="navbar-menu">
                <div class="navbar-end">
                    <a class="navbar-item" href="/">
                        Home
                    </a>
                    <a class="navbar-item" href="/profile">
                        Profile
                    </a>
                    <a class="navbar-item" href="/auth/logout">
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <br /><br />
    <!-- Title -->
    <div class="columns">
        <div class="column has-text-centered">
            <h1 class="title" style="color: ghostwhite;" id="mainTitle">Welcome to Blind Games Studio</h1>
        </div>
    </div>

    <br /><br /><br /><br />
    <div class="column is-4 is-offset-4">
        <div class="card large">
            <div class="card-image">
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <h2><strong>Profile Page</strong></h2>
                            <h3>Welcome to your <strong>PROFILE</strong></h3>
                            <br>
                            <p><strong>Id:</strong>
                                <%= id %>
                            </p>
                            <p><strong>Name:</strong>
                                <%= name %>
                            </p>
                            <p><strong>Email:</strong>
                                <%= email %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    </div>

</body>

<!-- Footer -->
<footer class="footer" id="firstFooter">
    <div class="container">
        <div class="content has-text-centered">
            <div class="soc">
                <a href="#"><i class="fa fa-youtube fa-lg" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-facebook fa-lg" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-twitter fa-lg" aria-hidden="true"></i></a>
            </div>
            <p>
                <strong id="Subjugate">Subjugate</strong> by <a href="/">Blind Games Studio</a>.
            </p>
        </div>
    </div>
</footer>